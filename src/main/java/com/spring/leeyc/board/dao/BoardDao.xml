<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.spring.leeyc.board.dao.BoardDao">
    
    <!-- 다짐 목록 -->
    <select id="listPromise" resultType="com.spring.leeyc.board.vo.BoardVO">
        SELECT
   			seqno,
        	promise,
        	ins_dt,
        	upt_dt
        FROM
        	promise_note
    </select>
    
    <!-- 다짐 상세 조회 -->
    <select id="readPromise" resultType="com.spring.leeyc.board.vo.BoardVO">
        SELECT
   			seqno,
        	promise,
        	ins_dt,
        	upt_dt
        FROM
        	promise_note
        WHERE
        	seqno = #{seqno}
    </select>
    
    <!-- 다짐 등록 -->
    <insert id="insPromise" parameterType ="com.spring.leeyc.board.vo.BoardVO">
    	INSERT
    	INTO promise_note(
    		promise
    	)
    	VALUES(
    		#{promise}
    	)
    </insert>
</mapper>
